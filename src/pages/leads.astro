---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
	title="Leads"
	description="Learn about some of my work as a senior software developer and see my most recent projects below to get an idea of my past experience."
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Free Marketing Leads"
				tagline="Search for the best marketing leads to help you grow your business."
			/>
			<Grid variant="offset">
				Menu
			</Grid>
		</main>
	</div>
</BaseLayout>
